ul.top_nav
  - @menu.each do |m|
    - (request.path == m.altlink or request.path == "/"+m.altlink ) ? @class = "active" : @class = ""
    li class="#{ @class }"
      = link_to m.name, m.altlink

span.mob.ico_main
ul.mob.mob_nav.main
  - @menu.each do |m|
    - (request.path == m.altlink or request.path == "/"+m.altlink ) ? @class = "active" : @class = ""
    li class="#{ @class }"
      = link_to m.altlink do
        span
          = m.name

