= simple_form_for [:admin, @teammate], html: { class: :form, multipart: true } do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, label: t('activerecord.teammate.name'), label_html: { class: 'label' }
    = f.input :shortdesc, label: t('activerecord.teammate.shortdesc'), label_html: { class: 'label' }
    = f.input :description, label: t('activerecord.teammate.description'), label_html: { class: 'label' }
    = f.input :avatar, label: t('activerecord.teammate.avatar'), label_html: { class: 'label' }
    h3
      = t('technologies') + ':'
      #technologies
        // todo field with autocomplete for technologies
  
  .form-actions
    = f.submit t('web_app_theme.save'), class: 'button success'
    = ' ' + t('web_app_theme.or') + ' '
    = link_to t('web_app_theme.cancel'), admin_teammates_path